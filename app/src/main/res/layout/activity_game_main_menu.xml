<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student.createanapp.GameMainMenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnRock"
        android:id="@+id/btnRock"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="playRock" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnPaper"
        android:id="@+id/btnPaper"
        android:onClick="playPaper"
        android:layout_above="@+id/btnLizard"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnScissors"
        android:id="@+id/btnScissors"
        android:onClick="playScissors"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnQuit"
        android:layout_alignEnd="@+id/btnQuit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnLizard"
        android:id="@+id/btnLizard"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/btnRock"
        android:layout_toLeftOf="@+id/btnPaper"
        android:layout_toStartOf="@+id/btnPaper"
        android:onClick="playLizard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSpock"
        android:id="@+id/btnSpock"
        android:onClick="playSpock"
        android:layout_alignTop="@+id/btnLizard"
        android:layout_toRightOf="@+id/btnPaper"
        android:layout_toEndOf="@+id/btnPaper" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnQuit"
        android:id="@+id/btnQuit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="quitGame" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s Play!"
        android:id="@+id/txtvwStatus"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />
</RelativeLayout>
