<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student.createanapp.GameMainMenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s Play!"
        android:id="@+id/txtvwStatus"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/btnRock"
        android:onClick="playRock"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPaper"
        android:text="Paper"
        android:onClick="playPaper"
        android:layout_alignTop="@+id/btnRock"
        android:layout_alignRight="@+id/txtvwStatus"
        android:layout_alignEnd="@+id/txtvwStatus" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scissors"
        android:id="@+id/btnScissors"
        android:onClick="playScissors"
        android:layout_alignTop="@+id/btnPaper"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lizard"
        android:id="@+id/btnLizard"
        android:onClick="playLizard"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/btnRock"
        android:layout_toLeftOf="@+id/btnPaper"
        android:layout_toStartOf="@+id/btnPaper" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spock"
        android:id="@+id/btnSpock"
        android:onClick="playSpock"
        android:layout_alignTop="@+id/btnLizard"
        android:layout_toRightOf="@+id/btnPaper"
        android:layout_toEndOf="@+id/btnPaper" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/btnQuit"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnScissors"
        android:layout_alignEnd="@+id/btnScissors"
        android:onClick="quitGame" />
</RelativeLayout>
